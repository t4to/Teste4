# coding: utf-8
<!DOCTYPE html>
<html>
<head>
  <title>Agregador de Informações</title>
  <%= stylesheet_link_tag :all %>
  <%= javascript_include_tag :defaults %>
  <%= csrf_meta_tag %>
</head>
<body>


<div id="container">
  <div id="main_panel">
    <div class="main_center">
      <div id="main_top_panel">
        <div id="main_top_logo_panel">
          <div class="logo">
            <h1>Agregador de Informações</a></h1>
          </div>
        </div>
        <div id="navigation_panel">
          <div id="topmenu">
			<% if admin_signed_in? %>
			<ul>
			  <li><a href="<%= root_path %>" class="over"><span>Home</span></a></li>
			  <li><a href="<%= assuntos_path %>"><span>Assuntos</span> </a></li>
			  <li><a href="<%= areas_path %>"><span>Áreas</span> </a></li>
			  <li><a href="<%= categorias_path %>"><span>Categorias</span> </a></li>
			  <li><a href="<%= perfis_path %>"><span>Perfis</span> </a></li>
			</ul>
			<% end %>
            <div class="clear"></div>
          </div>
        </div>
        <div class="clear"></div>
        <div class="clear"></div>
		<% if admin_signed_in? %>
		<div class="sair"><%= link_to "Sair", destroy_admin_session_path, :method => :delete %></div>
		<% else %>
		<div class="sair"><%= link_to "Entrar", new_admin_session_path %></div>
		<% end %>
      </div>
      <div class="main_controller">
        <div class="main_inner_center">
		
          <div id="main_header_panel">
			<span class="notice"><%= notice %></span>
			<span class="alert"><%= alert %></span>
          </div>
		  
          <div id="main_middle_panel">
            <div class="main_middle_controller">
              <div class="main_middle_details">
			  
				<%= yield %>
			  
                
              </div>
            </div>
          </div>
		  
          <div id="main_header_panel">
          </div>
		  
        </div>
      </div>
    </div>
  </div>
</div>
