# coding: utf-8
<h1>Manutenção de categorias</h1>

<table>
  <tr>
    <th>Area</th>
    <th>Nome</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @categorias.each do |categoria| %>
  <tr>
    <td><%= categoria.area_id %></td>
    <td><%= categoria.nome %></td>
    <td><%= link_to 'Visualizar', categoria %></td>
    <td><%= link_to 'Alterar', edit_categoria_path(categoria) %></td>
    <td><%= link_to 'Excluir', categoria, :confirm => 'Confirmar exclusão?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Incluir Categoria', new_categoria_path %>
