# coding: utf-8
<h1>Manutenção de perfis</h1>

<table>
  <tr>
    <th>Categoria</th>
    <th>User</th>
    <th>Nome</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @perfis.each do |perfil| %>
  <tr>
	<% @categ = Categoria.find_by_id(perfil.categoria_id) %>
    <!-- <td><%= perfil.categoria_id %></td> -->
	<td><%= @categ.nome %></td>
    <td><%= perfil.user %></td>
    <td><%= perfil.nome %></td>
    <td><%= link_to 'Visualizar', perfil %></td>
    <td><%= link_to 'Alterar', edit_perfil_path(perfil) %></td>
    <td><%= link_to 'Excluir', perfil, :confirm => 'Confirmar exclusão?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'Incluir Perfil', new_perfil_path %>
