# coding: utf-8
<div data-role="header" data-theme="b" data-position="inline">
	<%= link_to "Voltar", "#", "data-rel" => "back", "data-direction" => "reverse", "data-icon" => "arrow-l" %>
	<h1>
		@<%= @screen_name %>
	</h1>
	<%= link_to "Home", mobile_home_url, "data-rel" => "home", "data-direction" => "reverse", "data-icon" => "home", "data-iconpos" => "notext" %>
	<!--<%= link_to "Atualizar", "#", "data-icon" => "refresh", "class" => "ui-btn-right" %>-->
</div>

<div data-role="content" data-theme="b">
	<div>
		<ul data-role="listview" data-theme="d" data-inset="true">
			<li>
				<img alt="<%= @screen_name %>" src="<%= @imagem_perfil %>">
				@<%= @screen_name %><br/><br/>
				<div><%= @bio %></div>
			</li>
		</ul>
	</div>

	<ul data-role="listview" data-theme="d" data-inset="true">
		<% @resultados.each_with_index do |resultado, index| %>
			<li>
				
				<%= resultado.text%>
				
			</li>	
		<% end %>
	</ul>
	
	<%= link_to "Continuar no Twitter", @go_twitter, "data-role" => "button", "data-theme" => "d", "target" => "_blank" %>
</div><!-- /content -->